{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@v/*": ["./src/views/*"],
      "@c/*": ["./src/components/*"],
      "@u/*": ["./src/utils/*"],
      "@a/*": ["./src/assets/*"],
      "@s/*": ["./src/service/*"],
      "@p/*": ["./src/plugins/*"],
      "@d/*": ["./src/directives/*"],
      "@hooks/*": ["./src/hooks/*"]
    },
  },
  "include": ["src"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
