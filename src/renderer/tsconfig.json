{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["src/renderer/src/*"],
      "@v/*": ["src/renderer/src/views/*"],
      "@c/*": ["src/renderer/src/components/*"],
      "@u/*": ["src/renderer/src/utils/*"],
      "@a/*": ["src/renderer/src/assets/*"],
      "@s/*": ["src/renderer/src/service/*"],
      "@p/*": ["src/renderer/src/plugins/*"],
      "@d/*": ["src/renderer/src/directives/*"],
      "@hooks/*": ["src/renderer/src/hooks/*"]
    },
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": ["vite/client", "jest", "@types/node"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
